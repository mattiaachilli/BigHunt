<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane id="settings" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.scenecontroller.SettingsSceneControllerImpl">
   <top>
      <Label id="title" alignment="CENTER" text="SETTINGS" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane prefHeight="400.0" prefWidth="800.0">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="280.0" minWidth="260.0" prefWidth="270.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="0.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="280.0" minWidth="260.0" prefWidth="270.0" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="DIFFICULTY" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="RESOLUTION" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="FPS" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="BACKGROUND AUDIO" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Button fx:id="settingsApplyBtn" mnemonicParsing="false" onAction="#applyChanges" text="APPLY" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                  <CheckBox fx:id="bgAudioCheckBox" mnemonicParsing="false" onAction="#enableApplyBtn" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                  <ComboBox fx:id="fpsComboBox" onAction="#enableApplyBtn" prefWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                  <ComboBox fx:id="difficultyComboBox" onAction="#enableApplyBtn" prefWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <ComboBox fx:id="resolutionComboBox" onAction="#enableApplyBtn" prefWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <GridPane prefHeight="150.0" prefWidth="400.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" />
                      <ColumnConstraints hgrow="SOMETIMES" />
                      <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backToMenu" text="BACK TO MENU" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                     </children>
                  </GridPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
